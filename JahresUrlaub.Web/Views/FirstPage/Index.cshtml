    <script type="text/javascript">
        function AlertMsg() {
            var message = "Simple MessageBox";
            var title = "Title";
            window.prompt(message, title);  
        }
        
    </script>
    <body>
        <img src="~/Images/bussiness-man.png" width="80" height="50" id="bild" />
        <h3 id="username">@Model.Username </h3>
